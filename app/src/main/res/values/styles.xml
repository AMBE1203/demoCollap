<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/navigation_bar</item>
        <item name="colorPrimaryDark">@color/navigation_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Base style begin -->

    <!-- Base style end -->


    <style name="Header_Button">
        <item name="android:layout_width">@dimen/btn_height_header</item>
        <item name="android:layout_height">@dimen/btn_height_header</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="Header_Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/header_text_color</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

